@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    label::after{
        background-color: #FDF6E3;
    }

    .image-container {
        mix-blend-mode: multiply;
        padding: 20px; /* Adjust padding as needed */
        
    }

    .image-container img {
        max-width: 85%; /* Ensure image doesn't exceed container width */
        height: auto; /* Maintain aspect ratio */
        display: block; /* Remove default inline spacing */
        margin-left: 25%;
    }

    
</style>

<div class="row">
    <div class="col-md-4 offset-md-1 mt-1">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-dark mt-4 fw-bold align-content-center">@ViewData["Title"]</h2>
            <h2 class="text-dark">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-light" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="text-dark">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control bg-light" aria-required="true" placeholder="John Doe" />
                <label asp-for="Input.Name" class="text-dark">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-light" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="text-dark">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-light" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="text-dark">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control bg-light" aria-required="true" placeholder="Street Address" />
                <label asp-for="Input.StreetAddress" class="text-dark">Street Address</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control bg-light" aria-required="true" placeholder="City" />
                <label asp-for="Input.City" class="text-dark">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.State" class="form-control bg-light" aria-required="true" placeholder="State" />
                <label asp-for="Input.State" class="text-dark">State</label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PostalCode" class="form-control bg-light" aria-required="true" placeholder="Postal Code" />
                <label asp-for="Input.PostalCode" class="text-dark">Postal Code</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select bg-light">
                    <option disabled selected>----  SELECT A ROLE  ----</option>
                </select>
                <label asp-for="Input.Role" class="text-dark">Role</label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        <div class="p-4"></div>
    </div>
    <div class="col-md-6 mt-4">
        <div class="image-container">
            <img src="~/images/main/login_register.jpg" width="100%" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

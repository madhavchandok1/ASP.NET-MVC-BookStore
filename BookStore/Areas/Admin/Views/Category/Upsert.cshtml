@model Category

@{
    if(Model.CategoryId != 0)
        ViewData["Title"] = "Update Category";
    else
        ViewData["Title"] = "Add Category";
}

<div class="card shadow border-1 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">@(Model.CategoryId != 0 ? "Update" : "Create") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12">
                <div class="p">
                    <form method="post" class="bg-dark p-4 rounded-3 shadow">
                        <input asp-for="CategoryId" hidden />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="p-0"></label>
                            <input asp-for="Name" class="form-control bg-light-subtle" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="DisplayOrder" class="p-0"></label>
                            <input asp-for="DisplayOrder" class="form-control bg-light-subtle" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <div class="row justify-content-center mb-4">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
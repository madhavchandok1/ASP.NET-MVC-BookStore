@model Product

@{
    string title = Model.Title;
    ViewData["Title"] =$"Details - {title}";
}

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-dark bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase fw-bold">@Model.Title</h3>
                    <p class="text-white-40 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-dark bg-gradient mb-5 fw-semibold btn-sm text-uppercase px-3">
                            <small><i class="bi bi-arrow-left"></i> &nbsp; Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageURL" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-0">
                            <span class="badge text-dark fs-3 px-0">@Model.Title</span>
                        </div>
                        <div class="col-12 col-md-6 pb-3">
                            <span class="badge text-dark fs-6 px-0">by @Model.Author</span>
                        </div>

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge text- fs-5 px-0" style="color: #9E790A;">Category: @Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-80 px-0">ISBN : @Model.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-80  pb-2 px-0">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @Model.ListPrice.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-dark" style="border: 1px solid #CED4DA">
                                <div class="text-light text-opacity-80 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark" style="border: 1px solid #CED4DA">
                                <div class="text-light text-opacity-80 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark" style="border: 1px solid #CED4DA">
                                <div class="text-light text-opacity-80 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark" style="border: 1px solid #CED4DA">
                                <div class="text-light text-opacity-80 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold" style="border: 1px solid #0B3945">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold" style="border: 1px solid #0B3945">
                                <div>@Model.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold" style="border: 1px solid #0B3945">
                                <div>@Model.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold" style="border: 1px solid #0B3945">
                                <div>@Model.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="lh-sm">@Html.Raw(Model.Description)</p>
                        </div>

                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-dark text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-center"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-outline-dark w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart (Coming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>